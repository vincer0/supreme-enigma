# Environment variables for docker-compose
# Copy this file to .env and update the values

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Backend API Port
APP_PORT=8000

# Forward ports (for accessing from host)
FORWARD_DB_PORT=3306
FORWARD_REDIS_PORT=6379

# Xdebug (for backend development)
XDEBUG_ENABLED=true
XDEBUG_MODE=debug,develop

# User/Group IDs (should match your host user)
UID=1000
GID=1000
WWWGROUP=1000

# NOTE: All Laravel-specific environment variables should be set in backend/.env
# The docker-compose will read from backend/.env file directly

